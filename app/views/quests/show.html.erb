<div>
  <div class="row">
    <div class="col-4 offset-4">
      <div class="card quest-card" data-quest-id="<%= @quest[:quest] %>">
        <%= image_tag "#{@quest[:name]}.jpg", alt: "#{@quest[:name]}: #{@quest[:labor]}", class: "card-img-top" %>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
          </li>
          <li class="list-group-item">
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<% content_for :turn_status do %>
<div class="row">
  <div class="turn-status col-8 offset-4">
    <h4><%= @quest[:labor] %></h4>
    <%= form_with(url: "/games/#{@game.game_id}/quest", method: "post", id: "questForm") do %>
      <%= button_tag "Do Quest Stuff", type: "button", class: "btn btn-success", data: { toggle: "modal", target: "#startQuestModal" } %>
    <% end %>
  </div>
</div>
<% end %>

<div class="modal fade" id="startQuestModal" tabindex="-1" role="dialog" aria-labelledby="startQuestLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="startQuestLabel">Shall we proceed?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body confirmation-message">
        You must select a quest to continue.
      </div>
      <div class="modal-footer">
        <%= audio_tag("swordraw.mp3") %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button id="confirmQuest" type="button" class="btn btn-success" data-dismiss="modal">Let's Go!</button>
      </div>
    </div>
  </div>
</div>
